<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"

    >


    <!--android:layout_height="@dimen/post_detail_picture_viewpager"-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <com.commonsware.cwac.camera.CameraView
            android:id="@+id/activity_camera_cameraview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <com.namooplus.jejurizmandroid.view.DrawingView
            android:id="@+id/activity_camera_drawingview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <!--android:layout_centerInParent="true"-->

    <!--android:layout_height="@dimen/post_detail_picture_viewpager"-->

    <View
        android:id="@+id/activity_camera_shutter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/activity_camera_take_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />


</RelativeLayout>